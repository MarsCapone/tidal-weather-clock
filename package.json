{
  "name": "bun-react-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "src/backend/server.tsx",
  "module": "src/backend/server.tsx",
  "scripts": {
    "build": "bun run build.ts",
    "configure": "command -v git >/dev/null 2>&1 && git config core.hooksPath git-hooks || exit 0",
    "dev": "bun --hot src/backend/server.tsx",
    "format": "prettier --experimental-cli --write .",
    "lint": "eslint --cache .",
    "lint:format": "prettier --experimental-cli --cache --check .",
    "pre-commit": "prettier --experimental-cli --write --ignore-unknown",
    "start": "NODE_ENV=production bun src/backend/server.tsx"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/cli": "^4.1.11",
    "@tailwindcss/postcss": "^4.1.11",
    "ag-charts-enterprise": "^12.0.2",
    "array-equal": "^2.0.0",
    "bun-plugin-tailwind": "^0.0.14",
    "date-fns": "^4.1.0",
    "igniteui-react-core": "^19.0.0",
    "igniteui-react-gauges": "^19.0.0",
    "pino": "^9.7.0",
    "react": "^19",
    "react-dom": "^19",
    "react-hook-form": "^7.60.0",
    "react-router": "^7.6.3",
    "react-swipeable": "^7.0.2",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.2",
    "@nkzw/eslint-config": "^3.0.1",
    "@prettier/plugin-oxc": "^0.0.4",
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "daisyui": "^5.0.46",
    "eslint": "^9.30.1",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.18",
    "prettier-plugin-tailwindcss": "^0.6.13"
  }
}
